---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>üêó Andrey Ozornin</h1>
			<p>
				Product Engineer at <a href="https://framer.com/" class="company-link framer-link">Framer</a>, Amsterdam. 
				Previously at
				<a href="https://miro.com" class="company-link miro-link">Miro</a>, 
				<a href="https://booking.com" class="company-link booking-link">Booking</a>, 
				<a href="https://genestack.com" class="company-link genestack-link">Genestack</a>, 
				<a href="https://wrike.com" class="company-link wrike-link">Wrike</a>, 
				<a href="https://yandex.com" class="company-link yandex-link">Yandex</a>. 
			</p>
			<p>
				I code for web, write and make music.
			</p>
		</main>
		<style>
			.company-link {
				position: relative;
				transition: color .1s;
				line-height: 1;
				display: inline-block;
				&::before {
					transition: all .1s;
					content: '';
					position: absolute;
					background-color: inherit;
					width: 100%;
					height: 100%;
					box-sizing: content-box;
					padding: 0 4px;
					margin-left: -4px;
					top: 0;
					left: 0;
					border-radius: 50%;
					transform: scale(.5, 0);
					z-index: -1;
				}
				&:hover::before {
					border-radius: 0;
					transform: scale(1);
				}
			}
			.framer-link:hover {
				color: white;
				&::before {
					background-color: black;
				}
			}
			.miro-link:hover {
				color: black;
				&::before {
					background-color: yellow;
				}
			}
			.booking-link:hover {
				color: white;
				&::before {
					background-color: blue;
				}
			}
			.genestack-link:hover {
				color: white;
				&::before {
					background-color: green;
				}
			}
			.wrike-link:hover {
				color: white;
				&::before {
					background-color: green;
				}
			}
			.yandex-link:hover {
				color: black;
				&::before {
					background-color: yellow;
				}
				&::first-letter {
					color: red;
				}
			}
		</style>
		<Footer />
	</body>
</html>
